@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link href="~/Content/Authentication/login.css" rel="stylesheet" />
<script>
    $(function () {
        $("body").keydown(function () {
            if (event.keyCode == "13") {//keyCode=13是回车键
                $('.btnLogin').click();
            }
        });
    });

    function loginClick() {
        $.ajax({
            url: '/Authentication/CheckUser',
            type: 'post',
            data: $('#login_form').serialize(),
            success: function (data) {
                if (eval(data.state)) {
                    document.location.href = '/Home/Index';
                } else if (data.state == '0') {
                    $('#msg').html(data.message);
                    $('#msg').show().delay(1000).fadeOut();
                }
            }
        })

    }
</script>
<div class="t_div">
    <span>My Office</span><br /><br />
    <span>　　管理系统</span>
</div>

<div class="login_div">
    <form id="login_form">
        <input type="text" name="username" placeholder="用户名" class="user_img" style="margin-bottom:10px;" />
        <input type="password" name="password" placeholder="密　码" class="pwd_img" />
    </form>
    <div class="msgbox">
        <span id="msg"></span>
    </div>
    <input type="button" value="登　录" class="btnLogin" onclick="loginClick()" />
</div>