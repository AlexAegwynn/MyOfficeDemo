@{
    ViewBag.Title = "MyOffice";
    ViewBag.UserName = "Alex";
    ViewBag.MsgCount = "99";
    ViewBag.ScheduleCount = "99";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Home/home.css" rel="stylesheet" />
<script src="~/Scripts/Home/Clock.js"></script>
<style>
    span {
        font-family: 'Microsoft YaHei';
    }

    /******************/

    .top_div {
        overflow: hidden;
        position: relative;
    }

    .logo_div {
        width: 200px;
        height: 44px;
        margin: 15px 0px 15px 20px;
    }

        .logo_div img {
            width: 100%;
            max-width: 100%;
        }

    .nav_div {
        position: relative;
        height: 32px;
        background-color: rgba(255, 255, 255, 0.50);
    }

    .info_div {
        margin-left: 10px;
        padding-right: 70px;
        height: 32px;
    }

        .info_div span {
            /*font-family: 'Microsoft YaHei';*/
            line-height: 32px;
            font-size: 0.5em;
            font-weight: 600;
        }

    .btn_span {
        display: inline-block;
        width: 80px;
        margin-left: 5px;
        float: right;
        text-align: center;
    }

        .btn_span:hover {
            background-color: rgba(255, 255, 255, 0.20);
            cursor: pointer;
        }

        .btn_span:active {
            background-color: rgba(255, 255, 255, 0.10);
        }

    #hide_logo {
        width: 70px;
        position: absolute;
        top: 0px;
        right: 0px;
        text-align: center;
        line-height: 32px;
        font-size: 1.5em;
        color: #808080;
        border-left: 1px solid rgba(128, 128, 128, 0.60);
    }

        #hide_logo:hover {
            color: black;
            cursor: pointer;
        }

    .control_div {
        position: absolute;
        right: 0px;
        top: 0px;
        width: 342px;
        height: 35px;
        background-color: rgba(0, 0, 0, 0.40);
        border-bottom-left-radius: 50px;
        padding-right: 10px;
    }

        .control_div span {
            display: inline-block;
            line-height: 35px;
            color: white;
            font-size: 1em;
            font-weight: 600;
            width: 90px;
            float: right;
            text-align: center;
        }

            .control_div span:hover {
                cursor: pointer;
                background-color: rgba(0, 0, 0, 0.20);
            }

            .control_div span:active {
                background-color: rgba(128, 128, 128, 0.30);
            }

    /******************/

    .center_div {
        float: left;
        position: absolute;
        bottom: 0px;
        top: 106px;
        width: 100%;
        background-color: white;
    }

    /******************/

    .left_div {
        float: left;
        width: 220px;
        min-width: 220px;
        height: 100%;
        display: flex;
        /*display:none;*/
    }

    .menu_div {
        width: 200px;
        flex: auto;
        margin: 9px 0px 9px 9px;
        border: 1px solid rgba(128, 128, 128, 0.60);
        background-color: white;
    }

    .menu_title {
        width: 100%;
        height: 30px;
        padding-left: 15px;
        background-color: rgba(128, 128, 128, 0.50);
    }

        .menu_title span {
            line-height: 26px;
            font-size: 1em;
            font-weight: 600;
        }

    .menu_div h3 {
        display: block;
        height: 30px;
        margin: 0px;
        padding-left: 15px;
        line-height: 30px;
        font-size: 1em;
        font-weight: normal;
        cursor: pointer;
    }

        .menu_div h3:hover {
            background-color: rgba(128, 128, 128, 0.40);
        }

    .menu_div ul {
        display: none;
        margin: 0px;
        padding: 0px;
    }

        .menu_div ul li {
            height: 30px;
            padding-left: 33px;
            line-height: 30px;
            font-size: 1em;
        }

    .menu_active {
        transform: rotate(45deg);
    }
    /******************/
    .right_div {
        overflow: hidden;
        height: 100%;
        display: flex;
    }

    .tab_content_div {
        flex: auto;
        margin: 9px;
        border: 1px solid rgba(128, 128, 128, 0.60);
        background-color: white;
    }

    .tab_div {
        position: relative;
        z-index: 1;
        height: 30px;
        width: 100%;
        padding-left: 20px;
        border-bottom: 1px solid rgba(128, 128, 128, 0.60);
    }

        .tab_div span {
            line-height: 30px;
        }

    #home_btn {
        display: inline-block;
        width: 60px;
        text-align: center;
        font-size: 1em;
        font-weight: 600;
    }

        #home_btn:hover {
            cursor: pointer;
            background-color: rgba(165, 182, 214, 0.70);
        }

        #home_btn:active {
            cursor: pointer;
            background-color: rgba(165, 182, 214, 0.80);
        }

    #left_btn {
        font-size: 1em;
        position: absolute;
        width: 20px;
        height: 30px;
        top: 0px;
        left: 0px;
        line-height: 29px;
        text-align: center;
        color: #a3a3a3;
        border-right: 1px solid #a3a3a3;
    }

        #left_btn:hover {
            color: black;
            cursor: pointer;
        }

    .content_div {
        position: relative;
        width: 100%;
        height: 100%;
        bottom: 30px;
        padding-top: 30px;
        z-index: -1;
    }
    /******************/
</style>
<script>
    $(function () {
        $('#hide_logo').click(function () {
            if (this.className == 'glyphicon glyphicon-chevron-up') {
                this.className = 'glyphicon glyphicon-chevron-down';
                $('.logo_div').hide();
                $('.control_div').hide();
                $('.center_div').css('top', '32px');
            } else {
                this.className = 'glyphicon glyphicon-chevron-up';
                $('.center_div').css('top', '106px');
                $('.logo_div').show();
                $('.control_div').show();
            }
        });

        $('#left_btn').click(function () {
            if (this.className == 'glyphicon glyphicon-chevron-left') {
                this.className = 'glyphicon glyphicon-chevron-right';
                $('.left_div').css('display', 'none');
            } else {
                this.className = 'glyphicon glyphicon-chevron-left';
                $('.left_div').css('display', 'flex');
            }
        });

        $('h3').click(function () {
            $('h3').find('span:first').removeClass("menu_active");
            //$('.menu_div ul').slideUp(200);
            //var e = $('h3').find(this);
            //$(this).next().slideToggle(200);
            $(this).find('span:first').addClass("menu_active");
        })
    })

    function Logout() {
        if (confirm('确认退出登录？')) {
            document.location.href = '/Authentication/LogoutUser';
        }
    }
</script>

<div class="top_div">
    <div class="logo_div">
        <img src="~/Content/images/logo.png" />
    </div>
    <div class="nav_div">
        <div class="info_div">
            <span>欢迎用户 [ @ViewBag.UserName ] 登录，</span><span id="clock"></span>
            <span class="btn_span">日程（@ViewBag.ScheduleCount）</span>
            <span class="btn_span">消息（@ViewBag.MsgCount）</span>
        </div>
        <span id="hide_logo" class="glyphicon glyphicon-chevron-up"></span>
    </div>
    <div class="control_div">
        <span onclick="Logout()">退出登录</span>
        <span>系统设置</span>
        <span style="width:120px;">[ 中文 ] 切换</span>
    </div>
</div>
<div class="center_div bgcolor">
    <div class="left_div">
        <div class="menu_div">
            <div class="menu_title"><span class="glyphicon glyphicon-list"></span> <span>系统菜单</span></div>
            <h3><span class="glyphicon glyphicon-play"></span> <span>人事管理</span></h3>
            <ul>
                <li>● 人事管理</li>
                <li>● 人事管理</li>
                <li>● 人事管理</li>
            </ul>
            <h3><span class="glyphicon glyphicon-play"></span> <span>日程管理</span></h3>
            <ul>
                <li>● 日程管理</li>
                <li>● 日程管理</li>
                <li>● 日程管理</li>
            </ul>
            <h3><span class="glyphicon glyphicon-play"></span> <span>消息管理</span></h3>
            <ul>
                <li>● 消息管理</li>
                <li>● 消息管理</li>
                <li>● 消息管理</li>
            </ul>
            <h3><span class="glyphicon glyphicon-play"></span> <span>系统管理</span></h3>
            <ul>
                <li>● 系统管理</li>
                <li>● 系统管理</li>
                <li>● 系统管理</li>
            </ul>
            <h3><span class="glyphicon glyphicon-play"></span> <span>考勤管理</span></h3>
            <ul>
                <li>● 考勤管理</li>
                <li>● 考勤管理</li>
                <li>● 考勤管理</li>
            </ul>
        </div>
    </div>
    <div class="right_div">
        <div class="tab_content_div">
            <div class="tab_div">
                <i id="left_btn" class="glyphicon glyphicon-chevron-left"></i>
                <span id="home_btn">首页</span>
            </div>
            <div class="content_div"></div>
        </div>
    </div>
</div>

<script>
    var clock = new Clock();
    clock.display(document.getElementById("clock"));
</script>